@charset "UTF-8";

/*================ Variables ================*/
//Colors
$notification_tan: #e7ddd2;
$notification_gray: #6d6e71;
$nav_red: #8d734a;
$title_orange: #ff9d6c;
$bodyFont_gray: #4f5858;
$hashBlue: #00263d;
$spanRed: #da1c5c;

//Fonts
$mainHeaderFont:'din-2014-narrow';
$mainBodyFont: 'din-2014';

/*================ General ================*/
body{
	font-family: $mainBodyFont!important;
}
.no-padding{
	padding: 0!important;
}
@media screen and (min-width: 769px){
	.main-content {
	    padding-bottom: 0;
	    padding-top:0;
	}
}
h1{
	font-family: $mainBodyFont!important;
}
h2{
	font-family: $mainBodyFont!important;
}
p{
	color:$hashBlue;
	font-size: 1.25em;
	font-weight:400 ;
	font-family: $mainBodyFont!important;
	line-height:1.2;
}
/*================ Navigation ================*/
.mast-wrapper{
	padding:0!important;
	max-width: 1200px !important;
	margin: 0 auto;
}
@media screen and (min-width: 916px) {
	.site-nav{
		text-align:left;
	}
}
.site-nav--active {
	a{
		color:$title_orange;
	}
}
.site-nav__link {
	padding:0 15px;
	color: $nav_red;
  .is-light & {
    color: $nav_red;
  }
  .is-dark & {
    color: $nav_red;
  }
}
.site-header .grid--table>.grid__item{
	vertical-align:text-bottom;
}
ul.nav_icons{
	width: 30%;
    display: inline-block;
    text-align: right;
}
ul.main_nav{
	width: 70%;
    display: inline-block;
    li{
    	a{
    		font-family: $mainBodyFont;
    		font-size: 18px;
    	}
    }
}
h2.sj_title{
	&:after{
		content: url('https://cdn.shopify.com/s/files/1/1954/4515/files/Tilak_sm.png?16321445383923401052');
		display:block;
	}
}

.logo-row{
	text-align: center;
	margin-bottom: 1.0em;
}

/*================ Hero header ================*/
.wrapper{
	max-width: 1200px!important;
	padding: 0 0 0 15px;
}
.site-header{
	padding:15px 0 10px;
}
#site__notification_bar {
  background-color: $notification_tan;
  color: $notification_gray;
  display: block;
  position: relative;
  font-family: $mainBodyFont;
  font-weight: 600;
  .site__notification_container{
  	max-width: 1200px;
  	margin: 0 auto;
  	line-height:3;
  	text-align: right;
  }
}
.hero__header{
	position:relative;
	background-color: #fff;
}
.hero__slide{
	h2.hero__title{
		font-family: $mainBodyFont;
		text-align:left;
		font-size: 2.0em;
		max-width:30%;
		line-height:1.65;
	}
}
.hero--full-height { 
    max-height: 70vh;
}
.slick-slider{
	.slick-dots{
		text-align: right;
		right:4.0rem;
		li.slick-active{
			button{
				&:before{
					color:$title_orange!important;
				}
			}
		}
	}
}
.slick-slider .slick-dots li.slick-active button:before{
	background-color:$title_orange!important;
	border-color: $title_orange!important;
}
.hero__text-wrap{
	text-align: left;
	color: #fff;
	span.gold_txt{
		color:$nav_red;
	}

}
.headslide_container{
	position: relative;
}
.poem_container{
	position:absolute;
	z-index: 666;
	display: block;
	width:100%;
	left:0;
	top: 5%;
  	// transform: translateY(-50%);
	padding: 2.0em;
	p{
		color:#fff;
		font-size: 36px;
	}
	span.peach_txt{
		color:$title_orange;
		font-size: 36px;
	}
	span.cred_txt{
		font-size: 16px;
		color:#fff;
	}
	
}
/*================ Page Titles ================*/
.sj_title{
	color:$title_orange;
	text-transform: uppercase!important;
	font-family: $mainBodyFont;
	font-size:27px ;
	font-weight: 400;
	letter-spacing: 2.7px!important;
}
.section-header{
	margin-bottom:0;
}

body.template-index{
	.main-content{
		padding-top:10px!important;
	}
}
/*================ CTAs ================*/
.cta_block{
	text-align: center;
	padding: 0 1.0em;
	font-family: $mainBodyFont!important;
	img{
		display:block;
		margin: 1.0em auto 1.0em;
		max-width: 275px;
		height:auto;
	}
	h2{
		color:$title_orange ;
		font-size:27px ;
		font-weight: 400;
		margin:0 0 0.25em;
		font-family: $mainBodyFont!important;
	}
	p{
		color:$hashBlue;
		font-size: 1.25em;
		font-weight:400 ;
		font-family: $mainBodyFont!important;
	}
	a{
		color:$nav_red ;
		font-size: 18px;
		font-weight:400 ;
		letter-spacing: 1.8px;
		&:hover{
			color:$title_orange;
		}
	}
}
.journey_block{
	img{
		margin-bottom:1.4em;
	}
}
/*================ Instagram Feed ================*/
.insta_title{
	text-align: center;
	color:$title_orange ;
	font-size:27px ;
	font-weight: 400;
	margin:0 0 0.25em;
	font-family: $mainBodyFont!important;
	&:after{
		content: url('https://cdn.shopify.com/s/files/1/1954/4515/files/Tilak_sm.png?16321445383923401052');
		display:block;
	}
}
.instagram-feed{
	margin-bottom: 2.0em;
	margin-top: 3.0em;
}

/*================ Footer ================*/
footer.site-footer{
	border-top:1px solid $nav_red;
	padding-top: 2.0em;
	.last_footer_block {
		padding-left:10%;
	}
	.btn{
		background-color: $nav_red;
	}
	.wrapper{
		@media screen and (max-width: 590px){
			padding:0;
		}
	}
	.footer_title{
		color: $nav_red;
		font-weight: 400;
		font-size: 18px;
		margin-bottom: 0;
	}
	.vision_block{
		color:$title_orange;
		font-size: 30px;
		font-weight: 700;
		width:70%;
		line-height: 1.25;
		@media screen and (max-width: 916px) {
			width:100%;
			text-align: center;
		}
	}
	input, textarea, select {
	    font-style: italic;
	    font-size: 1.125em;
	    border-color: $nav_red;
	    background-color: transparent;
	    color: #1c1d1d;
	    -webkit-transition: opacity 0.4s ease-out;
	    -moz-transition: opacity 0.4s ease-out;
	    -ms-transition: opacity 0.4s ease-out;
	    -o-transition: opacity 0.4s ease-out;
	    transition: opacity 0.4s ease-out;
	}
	ul.social_list{
		list-style: none;
		margin: 1.5em 0 0;
		li{
			float:left;
			margin-right:.75em;
			a{
				&:hover{
					opacity: 0.5;
				}
			}
			img{
				max-width: 58px;
				height:auto;
			}
		}
	}
	ul.hashtags{
		list-style: none;
		margin: 0;
		li{
			color:$hashBlue;
			font-size: 1.25em;
			font-weight:400 ;
			font-family: $mainBodyFont!important;
		}
	}
	#footer_menu{
		list-style: none;
		li{
			a{
				color:$nav_red;
				font-size: 18px;
				font-weight: 400;
				text-transform: uppercase;
				&:hover{
					color:$title_orange;
				}
			}
		}
		@media screen and (max-width: 590px){
			margin: 0 0 15px 0;
		}
	}
}

/*================ General Secondary Page Styles ================*/

.sj-page-header{
	position:relative;


	h1{
		position: absolute;
		// width:100%;
		// left: 50%;
		// top:50%;
		// transform: translate(-50%,-50%);
		display:none;
		line-height: 1;
		left:22px;
		bottom:-10px;
		z-index:5;
		font-family: $mainBodyFont;
		font-weight:700;
		font-size: 4.5em;
		color: #fff;
		text-transform: uppercase;
		text-shadow: 0px 2px 6px rgba(0, 0, 0, 0.67);
		@media screen and (max-width: 590px){
			font-size: 2.5em;
			left:12px;
		}
	}
	img{
		z-index:3;
	}
}

/*================ About Page Styles ================*/

body#about{
	font-family: $mainBodyFont;
	.about-content{
		text-align: center;
	}
	.main-content{
		padding-top:0!important;
	}
}
.about-content{
	h1{
		font-family: $mainBodyFont;
		font-weight: 400;
		color:$hashBlue;
		span{
			color:$spanRed;
		}
	}
	h2{
		font-family: $mainBodyFont;
		font-weight: 600;
		color:$title_orange;
		font-size: 37px;
		text-align: center;
		&:after{
			content: url('https://cdn.shopify.com/s/files/1/1954/4515/files/Tilak_sm.png?16321445383923401052');
			display:block;
		}
	}
	h3{
		font-family: $mainBodyFont;
		font-weight: 600;
		color:$bodyFont_gray;
		font-size: 24px;
		margin:0;
		text-transform: none!important;
	}
	h4{
		color: $nav_red;
		font-weight: 400;
		font-size: 18px;
		margin-bottom: 0;
		text-transform: uppercase;
	}
	h5{
		color:$hashBlue;
		font-size:24px;
		font-family: $mainBodyFont;
		font-weight: 600;
	    width: 35%;
	    line-height: 1.65;
	    margin: 1.0em auto;
	    @media screen and (max-width: 590px){
			width:90%;
		}
	}
	p{
		color:$hashBlue;
	}
}

.wrapper { 
  margin: 0 auto 3.0em;
}

/*================ JI Page Styles ================*/
.ji-mast{
	padding: 4.0em 0 3.0em;
	p{
		text-align: center;
		font-size:24px ;
		font-weight: 700;
		color:$bodyFont_gray;
		span{
			color: $title_orange;
		}
	}
}
.ji-page-content{
	margin-top: 2.0em;
}
.ji-content{
	p{
		text-align: left;
	}
	span{
		font-weight: 600;
		margin:0.8em 0 1.0em;
		font-size: 1.5em;
		display:block;
		color:$bodyFont_gray;	
		line-height:1.2;
	}
	h2{
		color:$title_orange;
		font-family: "din-2014";
	    font-weight: 600;
	    font-size: 37px;
	    text-align: center;
	}
	a{
		color:$nav_red;
		&:hover{
			color:$title_orange;
		}
	}
}
.ji-image{
	img{
		float:right;
		margin: 0 0 1.0em 1.0em; 
		width:100%;
		height: auto;
	}
}

/*================ Blog Page Styles ================*/
body.template-blog{
	h1{
		display:none;
	}
	hr.hr--small{
		display: none;
	}
}
