@charset "UTF-8";

/*================ Variables ================*/
//Colors
$notification_tan: #e7ddd2;
$notification_gray: #6d6e71;
$nav_red: #8d734a;
$title_orange: #ff9d6c;
$bodyFont_gray: #4f5858;
$hashBlue: #00263d;

//Fonts
$mainHeaderFont:'din-2014-narrow';
$mainBodyFont: 'din-2014';

/*================ General ================*/
body{
	font-family: $mainBodyFont;
}
.no-padding{
	padding: 0!important;
}

/*================ Navigation ================*/
.mast-wrapper{
	padding:0!important;
}
@media screen and (min-width: 916px) {
	.site-nav{
		text-align:left;
	}
}

.site-nav__link {
	padding:0 15px;
  .is-light & {
    color: $nav_red;
  }
  .is-dark & {
    color: $nav_red;
  }
}
.site-header .grid--table>.grid__item{
	vertical-align:text-bottom;
}
ul.nav_icons{
	width: 30%;
    display: inline-block;
    text-align: right;
}
ul.main_nav{
	width: 70%;
    display: inline-block;
    li{
    	a{
    		font-family: $mainHeaderFont;
    		font-size: 1.5em;
    	}
    }
}

/*================ Hero header ================*/
.wrapper{
	max-width: 1200px!important;
}
.site-header{
	padding:15px 0 10px;
}
#site__notification_bar {
  background-color: $notification_tan;
  color: $notification_gray;
  display: block;
  position: relative;
  font-family: $mainBodyFont;
  font-weight: 600;
  .site__notification_container{
  	max-width: 1200px;
  	margin: 0 auto;
  	line-height:3;
  	text-align: right;
  }
}
.hero__header{
	position:relative;
	background-color: #fff;
}
.hero__slide{
	h2.hero__title{
		font-family: $mainBodyFont;
		text-align:left;
		font-size: 2.0em;
		max-width:30%;
		line-height:1.65;
	}
}
.hero--full-height { 
    max-height: 70vh;
}
/*================ Page Titles ================*/
.sj_title{
	color:$title_orange;
	text-transform: uppercase!important;
	font-family: $mainBodyFont;
	font-size:2.5em;
}
.section-header{
	margin-bottom:0;
}

body.template-index{
	.main-content{
		padding-top:10px!important;
	}
}
/*================ CTAs ================*/
.cta_block{
	text-align: center;
	padding: 0 1.0em;
	img{
		display:block;
		margin: 1.0em auto 1.0em;
		max-width: 275px;
		height:auto;
	}
	h2{
		color:$title_orange ;
		font-size:27px ;
		font-weight: 400;
		margin:0 0 0.25em;
	}
	p{
		color:$bodyFont_gray;
		font-size: 1.25em;
		font-weight:400 ;
	}
	a{
		color:$nav_red ;
		font-size: 18px;
		font-weight:400 ;
		&:hover{
			color:$title_orange;
		}
	}
}
/*================ Instagram Feed ================*/
.insta_title{
	text-align: center;
	font-size: 18px;
	font-weight: 400;
	color: $nav_red;
}
.instagram-feed{
	margin-bottom: 2.0em;
	margin-top: 3.0em;
}

/*================ Footer ================*/
footer.site-footer{
	.footer_title{
		color: $nav_red;
		font-weight: 400;
		font-size: 18px;
		margin-bottom: 0;
	}
	.vision_block{
		color:$title_orange;
		font-size: 30px;
		font-weight: 700;
		width:70%;
		line-height: 1.25;
		@media screen and (max-width: 916px) {
			width:100%;
			text-align: center;
		}
	}
	input, textarea, select {
	    font-style: italic;
	    font-size: 1.125em;
	    border-color: #1c1d1d;
	    background-color: transparent;
	    color: #1c1d1d;
	    -webkit-transition: opacity 0.4s ease-out;
	    -moz-transition: opacity 0.4s ease-out;
	    -ms-transition: opacity 0.4s ease-out;
	    -o-transition: opacity 0.4s ease-out;
	    transition: opacity 0.4s ease-out;
	}
	ul.social_list{
		list-style: none;
		margin: 1.5em 0 0;
		li{
			float:left;
			margin-right:.75em;
			a{
				&:hover{
					opacity: 0.5;
				}
			}
			img{
				max-width: 58px;
				height:auto;
			}
		}
	}
	ul.hashtags{
		list-style: none;
		margin: 0;
		li{
			font-weight: 700;
			color:$hashBlue;
			font-size: 1.5em;
		}
	}
	#footer_menu{
		list-style: none;
		li{
			a{
				color:$nav_red;
				font-size: 1.5em;
				font-weight: 400;
				text-transform: uppercase;
				&:hover{
					color:$title_orange;
				}
			}
		}
	}
}



